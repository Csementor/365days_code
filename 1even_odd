const prompt=require('prompt-sync')({sigint:true});
function even_odd(n){
    if(n%2==0){
        return "even";
    }else{
        return "odd";

    }
}
const number=parseInt(prompt("enter the number"));
if(!isNaN(number)){
    const result=even_odd(number);
    console.log(`${number} is ${result} number`);
}else{
        console.log(`${number}is invalid ,please enter valid number`);
    }


